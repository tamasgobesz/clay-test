@section Scripts {
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/lib/angular-route/angular-route.min.js"></script>
    <script src="~/lib/angular-animate/angular-animate.min.js"></script>
    <script src="~/lib/angular-aria/angular-aria.min.js"></script>
    <script src="~/lib/angular-material/angular-material.min.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/doorsController.js"></script>
    <script src="~/js/eventsController.js"></script>
    <script src="~/js/doorDialogController.js"></script>
    <script src="~/js/propertiesController.js"></script>
    <script src="~/js/propertyUsersController.js"></script>
    <script src="~/js/propertyUserDialogController.js"></script>
}


<div ng-app="app-door" layout="column">
    <md-toolbar layout="row" class="md-toolbar-tools">
        <h1>DoorKicker</h1>
    </md-toolbar>

    <div flex layout="row">
        <md-sidenav class="md-whiteframe-4dp" md-is-locked-open="$mdMedia('gt-sm')"
                    md-component-id="left">
            <md-toolbar class="md-theme-indigo">
        <h1 class="md-toolbar-tools">@User.Identity.Name</h1>
        </md-toolbar>
            <md-content>
                <md-list>
                    <md-list-item>
                        <a href="/#/">Properties</a>
                    </md-list-item>
                    <md-list-item>
                        <a asp-action="Logout" asp-controller="Auth">Logout</a>
                    </md-list-item>
                </md-list>
            </md-content>
        </md-sidenav>

        <md-content flex id="content">
            <div layout="row" ng-view flex></div>
        </md-content>
    </div>
</div>
